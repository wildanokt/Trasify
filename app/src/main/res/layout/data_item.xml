<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/round_shape"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_lokasi_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryText"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Lokasi A"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/item_lokasi_secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondaryText"
            android:textSize="16sp"
            tools:text="Masjid Raden Patah" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anorganik :"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">
            <ProgressBar
                android:id="@+id/item_pg_anorganik"
                android:layout_marginVertical="10dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_weight="85"
                android:layout_height="wrap_content"
                android:max="100"
                android:progressDrawable="@drawable/custom_progressbar"
                android:progressTint="#26C281"
                android:progressBackgroundTint="#C2F2DE"
                android:progress="50"
                />
            <TextView
                android:id="@+id/item_persen_anorganik"
                android:layout_width="0sp"
                android:layout_weight="15"
                android:layout_height="wrap_content"
                tools:text="100%"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:textColor="@color/primaryText"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_warn_anorganik"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Warning"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organik :"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">
            <ProgressBar
                android:id="@+id/item_pg_organik"
                android:layout_marginVertical="10dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_weight="85"
                android:layout_height="wrap_content"
                android:max="100"
                android:progressTint="#26C281"
                android:progressBackgroundTint="#C2F2DE"
                android:progress="50"
                android:progressDrawable="@drawable/custom_progressbar"/>
            <TextView
                android:id="@+id/item_persen_organik"
                android:layout_width="0sp"
                android:layout_weight="15"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                tools:text="100%"
                android:layout_gravity="center"
                android:paddingLeft="10dp"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_warn_organik"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Warning"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logam :"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">
            <ProgressBar
                android:id="@+id/item_pg_logam"
                android:layout_marginVertical="10dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_weight="85"
                android:layout_height="wrap_content"
                android:max="100"
                android:progressDrawable="@drawable/custom_progressbar"
                android:progressTint="#26C281"
                android:progressBackgroundTint="#C2F2DE"
                android:progress="50"
                />
            <TextView
                android:id="@+id/item_persen_logam"
                android:layout_width="0sp"
                android:layout_weight="15"
                android:layout_height="wrap_content"
                tools:text="100%"
                android:textColor="@color/primaryText"
                android:layout_gravity="center"
                android:paddingLeft="10dp"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_warn_logam"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Warning"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>